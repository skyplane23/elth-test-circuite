{
	"name": "PHP 8 with Nginx",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/var/www/html",
	"customizations": {
		"vscode": {
			"extensions": [
				"xdebug.php-debug",
				"bmewburn.vscode-intelephense-client"
			]
		}
	},
	"forwardPorts": [
		8080
	],
	"postCreateCommand": "sudo chown -R vscode:vscode /var/www/html"
}
